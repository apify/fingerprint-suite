{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020",
      "WebWorker"
    ],
  },
  "include": [
    "src/**/*",
    "static/**/*"
  ]
}
